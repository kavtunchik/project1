@using Collection.ViewModels
@model ItemsListViewModel
<h1 text-align="center">Общие предметы</h1>
<h3 text-align="center">@Model.currCategory</h3>
<div class="row mt -5 mb -2">
    @{
        foreach (var item in Model.allItems.Reverse())
        {
        <div class="col-lg-4">
            <img class="img-thumbail" width="100%" height="50%" src="@item.img" alt="@item.name" />
            <h2>Название: @item.name</h2>
            <p>@item.desc</p>
            <p>Автор:@item.authorName</p>
            <p>Цена:@item.price.ToString()</p>
            <p><a class="btn btn-warning" href="#">Подробнее</a>
        </div>
        }
    }
</div>         