<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/language.css" type="text/css" rel="stylesheet">
</head>
<body>
    <header>
           
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
          <div class="language">
   <img src="~/pictures/eng.png" alt="en" data-google-lang="en" class="language__img" translate="no">
   <img src="~/pictures/rus.png" alt="ru" data-google-lang="ru" class="language__img" translate="no">
        </div>
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Коллекции</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Главная страница</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Вход/Регистрация</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Мои коллекции</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Поиск" aria-label="Поиск">
                        <button class="btn btn-outline-success" type="submit">Поиск</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        @RenderBody()
    </div>
  
    <footer class="container">
        <p class="float-end"><a href="#">В начало</a></p>
        <p>© 2022 Itransition · <a href="#">Правила</a> · <a href="https://vk.com/kavtunchik">Связь с разработчиком</a></p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>
    <script src="~/js/google-translate.js"></script>
    <script src="//translate.google.com/translate_a/element.js?cb=TranslateInit"></script>
   
</body>

</html>